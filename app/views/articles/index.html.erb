<div class="container">
<h1>Articles</h1>
<br>
<h3>Our blog has <%= Article.public_count %> articles and counting!</h3>
<ul>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
        <li>
        <%= link_to article.title, article %>
        </li>
    <% end %>
  <% end %>
</ul>
<hr>
<%= link_to "New Article", new_article_path, class:"btn btn-dark btn-hover" %>
</div>