<div class="container">
    <h1><%= @article.title %></h1>
    <br>
    <p> <%= @article.body %> </p>
    <br>
    <%= link_to "Edit", edit_article_path, class:"btn btn-dark btn-hover"  %>
    <%= link_to "Destroy", article_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class:"btn btn-danger btn-hover" %>
    <hr>
        <div class="container">
        <h2>Comments</h2>
            <%= render @article.comments %>
        </div>
        <hr>
        <div class="container">
            <h2>Leave a comment!</h2>
            <%= render 'comments/form' %>
        </div>
    <hr>
    <%= link_to "Home", root_path, class:"btn btn-dark btn-hover"%>
</div>
